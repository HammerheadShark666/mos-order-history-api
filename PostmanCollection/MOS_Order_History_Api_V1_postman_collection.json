  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "{{authentication_url}}/api/{version}login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {\r",
                  "    pm.response.to.have.status(200);\r",
                  "});  \r",
                  "\r",
                  "pm.test('Schema validation', () => {\r",
                  "    pm.response.to.have.jsonSchema (JSON.parse(pm.environment.get(\"logged_in_schema\")));\r",
                  "});\r",
                  " \r",
                  "var jsonData = JSON.parse(pm.response.text()); \r",
                  "pm.environment.set(\"token\", jsonData.jwtToken);"
                ],
                "type": "text/javascript",
                "packages": {}
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\r\n  \"username\": \"{{username}}\",\r\n  \"password\": \"{{password}}\"\r\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "https://{{authentication_url}}/api/v1/login",
              "protocol": "https",
              "host": [
                "{{authentication_url}}"
              ],
              "path": [
                "api",
                "v1",
                "login"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Order",
      "item": [
        {
          "name": "{{order_history_url}}/api/v1/order-history/{{order_id}}",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {\r",
                  "    pm.response.to.have.status(200);\r",
                  "}); \r",
                  "\r",
                  "pm.test('Schema validation', () => {\r",
                  "    pm.response.to.have.jsonSchema (JSON.parse(pm.environment.get(\"order_history_schema\")));\r",
                  "});\r",
                  "\r",
                  "var jsonData = JSON.parse(pm.response.text()); \r",
                  "\r",
                  "pm.test('Id match', () => {     \r",
                  "    pm.expect(jsonData.orderHistory.id).to.eql(pm.environment.get(\"order_id\"));\r",
                  "});\r",
                  "\r",
                  "pm.test('Order number = 0000000001', () => {     \r",
                  "    pm.expect(jsonData.orderHistory.orderNumber).to.eql('0000000001');\r",
                  "});\r",
                  "\r",
                  "pm.test('Items count', () => {     \r",
                  "    pm.expect(jsonData.orderHistory.orderItems.length).to.eql(2);\r",
                  "});\r",
                  "\r",
                  "pm.test('Items count', () => {     \r",
                  "    pm.expect(jsonData.orderHistory.total).to.eql(19.98);\r",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {}
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "https://{{order_history_url}}/api/v1/order-history/{{order_id}}",
              "protocol": "https",
              "host": [
                "{{order_history_url}}"
              ],
              "path": [
                "api",
                "v1",
                "order-history",
                "{{order_id}}"
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
